<% provide(:title, @user.name) %>
<div class = "row">
	<aside class="col-md-4">
		<h1>
			<%= gravatar_for @user %>
			<%= @user.name %>
		</h1>
	</aside>
</div>
<div class="center">
	<h1><strong>Search History</strong></h1>
	<% search_history = history @user %>
	<% search_history.each do |artist| %>
		<h3><strong><%= artist %></strong></h3>
		<br>
	<% end %>
</div>
